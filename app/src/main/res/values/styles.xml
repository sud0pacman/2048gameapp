<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="PlayButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/bg_item_0</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/nunito</item>
    </style>

    <style name="PlayButton.Main">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="PlayButton.End">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>



    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>


    <style name="GameOver">
        <item name="android:windowEnterAnimation">@anim/game_over_open</item>
        <item name="android:windowExitAnimation">@anim/game_over_close</item>
    </style>




</resources>